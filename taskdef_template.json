{
  "family": "nimble-api-svc",
  "networkMode": "awsvpc",
  "taskRoleArn": "$TASK_ROLE",
  "executionRoleArn": "$TASK_EXECUTION_ROLE",
  "enableExecuteCommand": true,
  "containerDefinitions": [
    {
      "logConfiguration": {
        "logDriver": "awslogs",
        "secretOptions": null,
        "options": {
          "awslogs-group": "nimble-api-svc",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "api-svc",
          "awslogs-create-group": "true"
        }
      },
      "name": "nimble-api-svc",
      "image": "<IMAGE1_NAME>",
      "portMappings": [
        {
          "hostPort": $APP_PORT,
          "protocol": "tcp",
          "containerPort": $APP_PORT
        }
      ],
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 1024000,
          "hardLimit": 1024000
        }
      ],
      "secrets": [
      {
          "name": "NODE_ENV",
          "valueFrom": "arn:aws:ssm:us-west-2:$AWS_ACCOUNT_ID:parameter/nimble-api-svc/$STAGE/NODE_ENV"
      },
      {
          "name": "APP_NAME",
          "valueFrom": "arn:aws:ssm:us-west-2:$AWS_ACCOUNT_ID:parameter/nimble-api-svc/$STAGE/APP_NAME"
      },
      {
          "name": "AWS_S3_STORAGE_BUCKET",
          "valueFrom": "arn:aws:ssm:us-west-2:$AWS_ACCOUNT_ID:parameter/nimble-api-svc/$STAGE/AWS_S3_STORAGE_BUCKET"
      },
      {
          "name": "API_URL",
          "valueFrom": "arn:aws:ssm:us-west-2:$AWS_ACCOUNT_ID:parameter/nimble-api-svc/$STAGE/API_URL"
      },
      {
          "name": "STAGE",
          "valueFrom": "arn:aws:ssm:us-west-2:$AWS_ACCOUNT_ID:parameter/nimble-api-svc/$STAGE/STAGE"
      },
      {
          "name": "APP_PORT",
          "valueFrom": "arn:aws:ssm:us-west-2:$AWS_ACCOUNT_ID:parameter/nimble-api-svc/$STAGE/API_PORT"
      },
      {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:ssm:us-west-2:$AWS_ACCOUNT_ID:parameter/nimble-api-svc/$STAGE/DATABASE_URL"
      },
      {
          "name": "API_KEY",
          "valueFrom": "arn:aws:ssm:us-west-2:$AWS_ACCOUNT_ID:parameter/nimble-api-svc/$STAGE/API_KEY"
      },
      {
          "name": "REDIS_HOST",
          "valueFrom": "arn:aws:ssm:us-west-2:$AWS_ACCOUNT_ID:parameter/nimble-api-svc/$STAGE/REDIS_HOST"
      },
      {
          "name": "REDIS_PORT",
          "valueFrom": "arn:aws:ssm:us-west-2:$AWS_ACCOUNT_ID:parameter/nimble-api-svc/$STAGE/REDIS_PORT"
      },
      {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:ssm:us-west-2:$AWS_ACCOUNT_ID:parameter/nimble-api-svc/$STAGE/JWT_SECRET"
      },
      {
          "name": "JWT_EXPIRES_IN",
          "valueFrom": "arn:aws:ssm:us-west-2:$AWS_ACCOUNT_ID:parameter/nimble-api-svc/$STAGE/JWT_EXPIRES_IN"
      },
      {
        "name": "EMAIL_FORM",
        "valueFrom": "arn:aws:ssm:us-west-2:$AWS_ACCOUNT_ID:parameter/nimble-api-svc/$STAGE/EMAIL_FORM"
      },
      {
        "name": "SENDGRID_API_KEY",
        "valueFrom": "arn:aws:ssm:us-west-2:$AWS_ACCOUNT_ID:parameter/nimble-api-svc/$STAGE/SENDGRID_API_KEY"
      },
      {
        "name": "RE_CAPTCHA_API",
        "valueFrom": "arn:aws:ssm:us-west-2:$AWS_ACCOUNT_ID:parameter/nimble-api-svc/$STAGE/RE_CAPTCHA_API"
      }
      ]
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "2048",
  "memory": "4096",
  "runParams": {
    "networkConfiguration": {
      "awsvpcConfiguration": {
        "subnets": [
          "$SUBNET_ISOLATION_AZ_A",
          "$SUBNET_ISOLATION_AZ_B"
        ],
        "securityGroups": [
          "$SECURITY_GROUP_ISOLATION_ID"
        ],
        "assignPublicIp": "DISABLED"
      }
    }
  }
}
